<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">
	<RelativeLayout android:id="@+id/lay_action"
		android:layout_alignParentTop="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@color/dkgray">
		<TextView android:id="@+id/label_header"
			android:layout_width="wrap_content" android:layout_height="50px"
			android:text="Andrink" android:textColor="@color/white"
			android:textSize="25dip" android:paddingLeft="10px" android:gravity="center_vertical"
			android:layout_gravity="center_vertical" />

	</RelativeLayout>
	<ImageView android:layout_width="fill_parent"
		 android:layout_gravity="center"
		android:layout_height="wrap_content" android:id="@+id/logo"
		android:src="@drawable/home_screen_title" android:layout_marginTop="20dip" />
	<LinearLayout android:orientation="vertical" 
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical" 
			android:gravity="center" android:layout_width="fill_parent"
			android:layout_marginLeft='27dip' android:layout_marginRight='27dip'
			android:layout_height="fill_parent">
			<LinearLayout android:orientation="vertical" android:layout_gravity="center"
				android:gravity="center" android:layout_width="fill_parent"
				android:padding="12dip" android:layout_height="wrap_content"
				android:background="@drawable/background_with_alpha">
				<TextView android:layout_width="fill_parent" android:id='@+id/cartel2'
					android:text="Número de jugadores" android:layout_height="wrap_content"
					android:gravity="center" android:textSize='19dip'
					android:layout_gravity="center" android:layout_marginTop='14dip'
					android:layout_marginBottom='12dip' android:textColor='@color/white'
					android:textStyle="bold">
				</TextView>
				<EditText android:id="@+id/num_players"
					android:layout_gravity="center" android:layout_width="wrap_content"
					android:paddingLeft="15dip" android:paddingRight="15dip"
					android:layout_height="wrap_content" android:hint='nº de jugadores'
					android:paddingTop="5dip" android:paddingBottom="5dip"
					android:gravity="center" android:numeric="integer">
				</EditText>
				<Button android:id="@+id/Entrar" android:layout_width="wrap_content"
					android:layout_marginTop="15dip" android:paddingTop="5dip"
					android:paddingBottom="5dip" android:layout_height="wrap_content"
					android:paddingLeft="28px" android:paddingRight="28px"
					android:text="Listo!" android:textSize='16dip' android:textStyle="bold"
					android:gravity='center_horizontal' android:textColor='@color/black'
					android:background="@drawable/my_border_orange_open_all">
				</Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
