<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@color/gray">
	<RelativeLayout android:id="@+id/lay_action"
		android:layout_alignParentTop="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@color/dkgray">
		<TextView android:id="@+id/label_header"
			android:layout_width="wrap_content" android:layout_height="50px"
			android:text="Andrink" android:textColor="@color/white"
			android:textSize="25sp" android:paddingLeft="10px" android:gravity="center_vertical"
			android:layout_gravity="center_vertical" />

		<TextView android:layout_width="wrap_content" android:id="@+id/label_header2"
			android:layout_height="50px" android:layout_alignParentRight="true"
			android:text="Es el turno de .." android:textColor="@color/lightgray"
			android:paddingRight="10px" android:gravity="center_vertical"
			android:layout_gravity="center_vertical" />
		<TextView android:layout_toLeftOf="@id/label_header2" android:layout_marginRight="7dip"
			android:layout_height="50px" android:layout_width="1dip"
			android:background="@color/gray" />

	</RelativeLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_alignParentBottom="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:layout_width="fill_parent" android:id="@+id/KO"
			android:layout_weight="1.0" android:layout_height="wrap_content"
			android:text="Abandonar" android:paddingLeft="8dip"
			android:textStyle="bold" android:textColor="@color/red"
			android:paddingRight="8dip"></Button>
		<Button android:layout_width="fill_parent" android:id="@+id/listo"
			android:layout_weight="1.0" android:layout_height="wrap_content"
			android:text="Siguiente" android:paddingLeft="8dip"
			android:textStyle="bold" android:textColor="@color/dkgray"
			android:paddingRight="8dip"></Button>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_below="@id/lay_action" android:layout_height="fill_parent"
		android:orientation="vertical" android:gravity='center' android:id="@+id/lImage"
		android:layout_marginBottom="10dip">

		<ImageView android:layout_width="195dip" android:id="@+id/photo_player2"
			android:layout_height="195dip" android:layout_gravity="center"
			android:src="@drawable/photo" android:background="@drawable/background_image"></ImageView>
		<TextView android:id="@+id/nombre_player2"
			android:layout_marginTop="25dip" android:layout_width="wrap_content"
			android:text="Jugador" android:textColor="@color/white"
			android:layout_gravity="center" android:layout_height="wrap_content"
			android:textSize="25dip"></TextView>
	</LinearLayout>
</RelativeLayout>
